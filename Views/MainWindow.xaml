<Window x:Class="SimpleKeyMacro.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleKeyMacro"
        mc:Ignorable="d"
        Title="Simple Key Macro" Height="200" Width="350"
        WindowStartupLocation="CenterScreen"
        PreviewMouseDown="Window_PreviewMouseDown"
        Activated="Window_Activated">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.4*"/>
            <ColumnDefinition Width="0.2*"/>
            <ColumnDefinition Width="0.4*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBox x:Name="FocusableTextBox" Opacity="0" Width="1" Height="1" Background="Transparent" BorderThickness="0" IsTabStop="False" Focusable="True"/>

        <Grid Grid.Column="0">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0, 0, 0, 20">
                <TextBlock Text="Key" Width="52" FontSize="20" TextAlignment="Center" Margin="0, 0, 0, 5"/>
                <TextBox Text="{Binding KeyStrokeText}" IsReadOnly="true" Width="92" Height="32" TextAlignment="Center" FontSize="20" PreviewKeyDown="MacroKeyTextBox_KeyDown"/>
            </StackPanel>
        </Grid>

        <Grid Grid.Column="1">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0, 0, 0, 20">
                <TextBlock Text="Sec" Width="43" FontSize="20" TextAlignment="Center" Margin="0, 0, 0, 5"/>
                <TextBox Text="{Binding DelaySeconds, UpdateSourceTrigger=PropertyChanged}" Width="45" FontSize="20" Margin="0,0,0,0" Padding="3, 0, 0, 0" Height="31"/>
            </StackPanel>
        </Grid>

        <Grid Grid.Column="2">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0, 0, 0, 10">
                <TextBlock Text="Ctrl" Width="43" FontSize="20" TextAlignment="Center" Margin="0, 0, 0, 5"/>
                <Button Command="{Binding ToggleMacroCommand}" Content="{Binding StartButtonText}" Width="82" Height="42" FontSize="20" Background="#eee"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
